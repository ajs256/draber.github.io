{
    "label": "Spelling Bee Assistant",
    "title": "Assistant",
    "url": "https://spelling-bee-assistant.app/",
    "repo": "draber/draber.github.io.git",
    "targetUrl": "https://www.nytimes.com/puzzles/spelling-bee",
    "twitter": "@d_raber",
    "prefix": "sba",
    "extension": {
        "manifest": {
            "template": "src/templates/extension/manifest.json",
            "output": "src/extension/manifest.json"
        },
        "sba": "src/extension/spelling-bee-assistant.js",
        "sba-min": "src/extension/spelling-bee-assistant.min.js",
        "chromeStore": {
            "url": "https://chrome.google.com/webstore/detail/spelling-bee-assistant/ncejlmlagglodbdmkfmgnadfnbhnjcpg"
        },
        "firefoxStore": {
            "url": "https://addons.mozilla.org/en-US/firefox/addon/spelling-bee-assistant/"
        },
        "msStore": {
            "url": "https://microsoftedge.microsoft.com/addons/detail/spelling-bee-assistant/doeniefjeejkkdfnakoflmjlmfipejin"
        },
        "operaStore": {
            "url": "https://addons.opera.com/en/extensions/details/spelling-bee-assistant/"
        }
    },
    "html": {
        "template": "src/templates/html/index.html",
        "output": "index.html"
    },
    "js": {
        "input": "src/js/main.js",
        "plain": "dist/spelling-bee-assistant.js",
        "format": "iife"
    },
    "scss": {
        "widget": "src/scss/widget.scss",
        "site": "src/scss/site.scss",
        "colors": "src/scss/inc/_colors.scss"
    },
    "bookmarklet": {
        "cdn": {
            "url": "https://spelling-bee-assistant.app/assets/js/spelling-bee-assistant.min.js",
            "local": "assets/js/spelling-bee-assistant.min.js"
        },
        "html": {
            "template": "src/templates/bookmarklet/installer.html",
            "output": "dist/bookmarklet/installer.html"
        },
        "js": {
            "template": "src/templates/bookmarklet/tpl.js",
            "plain": "src/templates/bookmarklet/main.js"
        }
    },
    "css": {
        "widget": "src/css/widget.css",
        "site": "assets/css/site.css"
    },
    "gsc": {
        "drg": "xmUT-cNYKa8IEPI8wCAf7q55PLPknSIEfN5g6puT7HU",
        "sba": "7vZlJKBsl3KZZRbJV474IyxJMXg64TYzSpAAoxO74-8"
    }
}