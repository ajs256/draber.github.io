<script>
  ((d) => {
    d.body.dataset.theme = localStorage.getItem('theme') === 'dark' ? 'dark' : 'light'; 
    d.querySelectorAll('[href="#dark-mode"]').forEach(toggle => {
      toggle.addEventListener('click', evt => {	
        evt.preventDefault();
        d.body.dataset.theme = d.body.dataset.theme === 'dark' ? 'light' : 'dark';
        localStorage.setItem('theme', d.body.dataset.theme);
      })
    })
	  
