{
  "name": "spelling-bee-assistant",
  "version": "4.0.1",
  "description": "Spelling Bee Assistant is an add-on for Spelling Bee, the New York Timesâ€™ popular word puzzle",
  "devDependencies": {
    "@markedjs/html-differ": "^3.0.4",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/stream": "^2.0.0",
    "ajv": "^6.12.6",
    "beautify": "^0.0.8",
    "compiler": "file:src/tools/compiler",
    "cypress": "^8.0.0",
    "date-and-time": "^1.0.1",
    "eslint": "^7.30.0",
    "express": "^4.17.1",
    "fs-extra": "^10.0.0",
    "image-size": "^1.0.0",
    "lodash": "^4.17.21",
    "mock": "file:src/tools/modules/mock",
    "node-fetch": "^2.6.1",
    "puppeteer": "^10.1.0",
    "recursive-readdir": "^2.2.2",
    "rollup": "^2.52.8",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-string": "^3.0.0",
    "sass": "^1.35.2",
    "terser": "^5.7.1",
    "ua-parser-js": "^0.7.28",
    "uglify-js": "^3.14.0"
  },
  "scripts": {
    "app:build": "npm run ext:build & npm run site:build & documentation build ./src/tools/js/main.js -f html -o ./docs",
    "app:dev": "npm run sass:build & rollup -c ./src/config/rollup.js",
    "mock:create:current": "node --experimental-json-modules src/tools/modules/mock -c current",
    "mock:create:reference": "node --experimental-json-modules src/tools/modules/mock -c reference",
    "mock:evaluate": "node --experimental-json-modules src/tools/modules/mock -e current",
    "mock:diff": "npm run mock:create:current & npm run mock:evaluate",
    "mock:serve": "node src/tools/modules/mock/server/index.js",
    "mock:serve:debug": "node src/tools/modules/mock/server/index.js -d",
    "ext:build": "npm run app:dev & node ./src/tools/compiler/ -t extension",
    "ext:dev": "node ./src/tools/compiler/ -t appcss -d true & rollup -c ./src/config/rollup.js & node ./src/tools/compiler/ -t extension -d true",
    "ext:watch": "node ./src/tools/compiler/ -t extension -w",
    "sass:build": "node ./src/tools/compiler/ -t appcss",
    "sass:watch": "node ./src/tools/compiler/ -t appcss -w",
    "bm:build": "rollup -c ./src/config/rollup.js & node ./src/tools/compiler/ -t bookmarklet",
    "bm:watch": "rollup -c ./src/config/rollup.js & node ./src/tools/compiler/ -t bookmarklet -w",
    "site:build": "npm run app:dev & node ./src/tools/compiler/ -t site",
    "site:watch": "node ./src/tools/compiler/ -t site -w"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/draber/draber.github.io.git#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draber/draber.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/draber/draber.github.io.git/issues"
  },
  "author": "Dieter Raber",
  "license": "GPL-3"
}
